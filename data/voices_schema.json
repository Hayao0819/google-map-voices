{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "voices": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "command": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "source",
                    "command"
                ],
                "additionalProperties": false
            }
        },
        "instructions": {
            "type": "object",
            "properties": {
                "base": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "filename": {
                                "type": "string"
                            },
                            "id": {
                                "type": "integer"
                            },
                            "text": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "filename",
                            "id",
                            "text"
                        ],
                        "additionalProperties": false
                    }
                },
                "override": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z0-9_]+$": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "filename": {
                                        "type": "string"
                                    },
                                    "id": {
                                        "type": "integer"
                                    },
                                    "text": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "filename",
                                    "id",
                                    "text"
                                ],
                                "additionalProperties": false
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "base",
                "override"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "voices",
        "instructions"
    ],
    "additionalProperties": false
}
